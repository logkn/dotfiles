theme = gruvbox-material
font-family = FiraCode Nerd Font Mono
font-family-italic = JetBrains Mono
mouse-hide-while-typing = true

background-opacity = 1.0
background-blur = true
background = #32302F

keybind = ctrl+ =ignore

keybind = ctrl+ >c=new_tab
keybind = ctrl+ >n=next_tab
keybind = ctrl+ >p=previous_tab
keybind = global:cmd+enter=toggle_quick_terminal
keybind = ctrl+ >x=close_surface

keybind = ctrl+ >shift+j=new_split:down
keybind = ctrl+ >shift+k=new_split:up
keybind = ctrl+ >shift+h=new_split:left
keybind = ctrl+ >shift+l=new_split:right


keybind = ctrl+ >j=goto_split:bottom
keybind = ctrl+ >k=goto_split:top
keybind = ctrl+ >h=goto_split:left
keybind = ctrl+ >l=goto_split:right

keybind = global:alt+enter=new_window
keybind = ctrl+ >f=toggle_split_zoom
keybind = shift+enter=text:\n

keybind = super+r=reload_config
