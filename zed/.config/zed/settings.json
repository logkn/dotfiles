    //     // }
    // },
    "assistant": {
        // "default_model": {
        //     "provider": "anthropic",
        //     "model": "claude-3-5-sonnet-20240620"
        // },
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2",
        "enabled": true,
        // "default_open_ai_model": "gpt-4o",
        "provider": null
        // "provider": {
        //     "name": "openai",
        //     "default_model": "gpt-4o-mini",
        //     "available_models": []
        // }
    },
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "vim_mode": true,
    "format_on_save": "off",
    "hard_tabs": false,
    "tab_size": 4,
    "formatter": "prettier",
    "relative_line_numbers": true,
    "preferred_line_length": 88,
    "soft_wrap": "preferred_line_length",
    "buffer_font_family": "FiraCode Nerd Font Propo",
    "languages": {
        "JavaScript": {
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        },
        "TypeScript": {
            "code_actions_on_format": {
                "source.organizeImports": true,
                "source.fixAll.eslint": true
            }
        },
        "Rust": {
            // "formatter": {
            //     "external": {
            //         "command": "/run/media/logan/storage/development/Scripts/format_rust.sh",
            //         "arguments": ["-"]
            //     }
            // },
            "formatter": "language_server",
            "inlay_hints": {
                "maxLength": null,
                "lifetimeElisionHints": {
                    "useParamterNames": true,
                    "enable": "skip_trivial"
                },
                "closureReturnTypeHints": {
                    "enable": "always"
                }
            }
        },
        "Python": {
            "formatter": {
                "external": {
                    "command": "/run/media/logan/storage/Development/Scripts/format_python.sh",
                    "arguments": ["-"]
                }
            }
        }
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "check": {
                    "command": "clippy"
                },
                "checkOnSave": {
                    "command": "clippy"
                },
                "diagnostics": {
                    "experimental": {
                        "enable": true
                    }
                },
                "assist": {
                    "emitMustUse": true
                },
                "format": {
                    "enabled": true
                }
            }
        }
    }
}
